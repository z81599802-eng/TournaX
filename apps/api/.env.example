# Database connection uses least-privilege MySQL account.
DATABASE_URL=mysql://tournax_app:super-secure-password@mysql:3306/tournax

# JWT secrets: prefer RS256 (private/public base64) but fallback to HS256.
# Provide exactly one strategy in production to avoid misconfiguration.
JWT_SECRET=change-me-with-64-char-random
# JWT_PRIVATE_KEY=LS0tLS1CRUdJTiBSU0EgUFJJVkFURSBLRVktLS0tLQp....
# JWT_PUBLIC_KEY=LS0tLS1CRUdJTiBSU0EgUFVCTElDIEtFWS0tLS0tCg...

# Comma-separated allowlist for trusted frontends.
CORS_ORIGINS=https://app.tournax.local

# Rate limiting tuned for CI + prod overrides.
RATE_LIMIT_MAX=100

# Session cookie name is scoped to prevent collisions.
SESSION_COOKIE_NAME=tournax.sid

PORT=4000
NODE_ENV=development
